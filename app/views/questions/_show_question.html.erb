		<span class="at-name"><%= link_to show_question.user.name, user_messages_url(show_question.user) %></span>
		<span class="show-mainwords"> - <%=sanitize link_to truncate(show_question.detail,length=50), question_url(show_question) %></span>
		<span style="float:right;color:#c0c0c0;"><%= show_question.view %>é˜…</span>
	</div>
	<div class="tags">
		<%= render :partial => "show_tag", :collection => show_question.tag_list %>
	</div>
</div>
<% end %>