<html>
<head>
	<%= stylesheet_link_tag "mac","coderay", "jquery-ui" %>
	<%= javascript_include_tag ['jquery', 'jquery-ui', 'application', 'uki'] %>
</head>
<body>
	<% if check_browser_we_supported? -%>
	<div id="category_bar">
		<%= yield :category_bar %>
	</div>
	<div id="container">
		<%= yield :split %>
		<div id="list">
			<%= yield :list %>
		</div>
		<div id="content">
			<%= yield %>
		</div>
	</div>
	<% if logged_in? -%>
	<div id="shortcut_bar">
		<div class="logo"></div>
		<ul class="shortcut_bar_menu">
			<li><%= current_user.name %></li>
			<li><%= link_to '问答', questions_url %></li>
			<li><%= link_to '消息', user_messages_url(current_user) %></li>
		</ul>
	</div>
	<% end -%>
	<% else -%>
	<% end  %>
</body>
</html>